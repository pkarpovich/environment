{
  "ssh_connections": [
    {
      "host": "192.168.198.3",
      "username": "pi",
      "projects": [
        {
          "paths": ["~/home-environment"]
        }
      ]
    }
  ],
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "enable_experimental_live_diffs": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "icon_theme": "Catppuccin Latte",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "buffer_font_family": "Maple Mono NF",
  "ui_font_family": "Maple Mono NF",
  "ui_font_features": {
    "liga": true,
    "calt": true
  },
  "base_keymap": "JetBrains",
  "preferred_line_length": 120,
  "wrap_guides": [120],
  "autosave": "on_focus_change",
  "restore_on_startup": "last_session",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_close_button": "hover"
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "terminal": {
    "dock": "bottom",
    "detect_venv": { "on": { "activate_script": "fish" } },
    "env": { "EDITOR": "zed --wait" }
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "inlay_hints": { "enabled": true },
  "scrollbar": { "show": "auto" },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "current_line_highlight": "all",
  "auto_install_extensions": {
    "git-firefly": true,
    "catppuccin": true,
    "html": true,
    "toml": true,
    "lua": true,
    "fish": true
  },
  "languages": {
    "YAML": {
      "format_on_save": "off"
    },
    "Python": {
      "format_on_save": "on",
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 130,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace"
          // "typeCheckingMode": "strict"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.venv",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/target",
    "**/.rope*",
    "**/*_cache",
    "**/__pycache__",
    "**/.*-version",
    "**/.DS_Store"
  ]
}
