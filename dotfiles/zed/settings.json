{
  "ssh_connections": [
    {
      "host": "192.168.198.3",
      "username": "pi",
      "projects": [
        {
          "paths": ["~/home-environment"]
        }
      ]
    }
  ],
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_features": {
    "liga": true,
    "calt": true
  },
  "base_keymap": "JetBrains",
  "preferred_line_length": 120,
  "wrap_guides": [120],
  "autosave": "on_focus_change",
  "restore_on_startup": "last_session",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "current_line_highlight": "all",
  "auto_install_extensions": {
    "git-firefly": true,
    "catppuccin": true,
    "html": true,
    "toml": true,
    "lua": true,
    "fish": true
  },
  "languages": {
    "YAML": {
      "format_on_save": "off"
    }
  }
}
